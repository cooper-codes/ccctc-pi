{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": false,
    "declaration": false,
    "sourceMap": false,
    "target": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "ES2020"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src"
  ]
}